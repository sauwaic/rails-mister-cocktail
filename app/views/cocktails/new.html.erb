<div class="transbox">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-6 col-md-6 col-md-offset-3">
        <h1 class="text-center ">Add a cocktail:</h1>
        <br>
        <div>
          <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, placeholder: "Name of cocktail", label: false %>
          <%= f.input :photo, label: false%>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "+", class: "btn btn-danger btn-circle-red" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
